<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.ims.dao.MemberDao">

<!-- 회원가입 -->
	<insert id="mtdJoinProc" parameterType="java.util.Map">
		insert into memberList (userID, userPW, userPhone, userEmail, Shop_code, Shop_Auth) 
		values (#{item1},#{item2},#{item3},#{item4}, 0, 0)
	</insert>

<!-- 로그인처리 -->
	<select id="LoginProc" resultType="int">
		select count(*) from memberList where (userID like (#{param1}) or userEmail like (#{param1})) and userPW like(#{param2})
	</select>
	
<!-- 회원정보가져오기 -->
	<select id="findMemInfo" resultType="com.project.ims.dto.MemberDto">
		select * from memberList where userID=#{param1} or userEmail=#{param1}
	</select>

<!-- 아이디 중복 체크하기 -->
	<select id="chkID" resultType="int">
		select count(*) from memberList where userID like (#{param1})
	</select>
	
</mapper>

